<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Graph Fraud Detection Paper Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&family=IBM+Plex+Mono:wght@400;600&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/gridjs/dist/theme/mermaid.min.css" rel="stylesheet" />
  <script src="https://cdn.plot.ly/plotly-2.29.1.min.js"></script>
  <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
  <style>
    :root {
      --bg: #0f141b;
      --panel: #151b24;
      --card: #19222d;
      --accent: #7fc8c2;
      --accent-2: #94b0ff;
      --muted: #9aa8b5;
      --text: #e6edf3;
      --shadow: 0 18px 50px rgba(8, 12, 18, 0.45);
      --glass: rgba(255,255,255,0.05);
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: 'Manrope', system-ui, -apple-system, sans-serif;
      background: radial-gradient(120% 120% at 12% 12%, rgba(148,176,255,0.16), transparent 55%),
                  radial-gradient(90% 90% at 82% 18%, rgba(127,200,194,0.14), transparent 45%),
                  var(--bg);
      color: var(--text);
      line-height: 1.6;
    }
    .glow {
      position: fixed;
      inset: 0;
      pointer-events: none;
      background: radial-gradient(circle at 18% 22%, rgba(148,176,255,0.12), transparent 22%),
                  radial-gradient(circle at 82% 12%, rgba(242,182,160,0.12), transparent 26%),
                  radial-gradient(circle at 46% 82%, rgba(127,200,194,0.12), transparent 28%);
      z-index: 0;
    }
    main { position: relative; z-index: 1; }
    header {
      padding: 48px 5vw 16px;
    }
    h1 {
      margin: 0 0 10px;
      font-size: clamp(28px, 4vw, 40px);
      letter-spacing: -0.5px;
    }
    .lede {
      max-width: 720px;
      color: var(--muted);
      margin-bottom: 28px;
    }
    .pill {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      border: 1px solid rgba(148,176,255,0.35);
      color: var(--accent-2);
      padding: 8px 14px;
      border-radius: 999px;
      font-weight: 600;
      background: rgba(148,176,255,0.12);
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 16px;
      margin-top: 20px;
    }
    .card {
      background: linear-gradient(145deg, var(--card), #121922);
      border: 1px solid rgba(255,255,255,0.05);
      border-radius: 14px;
      padding: 18px;
      box-shadow: var(--shadow);
    }
    .card h3 {
      margin: 0 0 4px;
      font-size: 16px;
      color: var(--muted);
    }
    .card .value {
      font-size: 26px;
      font-weight: 700;
      letter-spacing: -0.5px;
    }
    .section {
      padding: 28px 5vw;
    }
    .section h2 {
      margin: 0 0 14px;
      font-size: 20px;
      letter-spacing: -0.3px;
    }
    .section p {
      color: var(--muted);
      margin-top: 0;
    }
    .panel {
      padding: 16px;
      border-radius: 14px;
      background: var(--panel);
      border: 1px solid rgba(255,255,255,0.04);
      box-shadow: var(--shadow);
    }
    #table { margin-top: 8px; }
    a { color: var(--accent-2); text-decoration: none; }
    a:hover { text-decoration: underline; }
    ul.insights {
      padding-left: 18px;
      color: var(--text);
    }
    .pill-bar {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      margin: 12px 0 0;
    }
    .pill-bar .tag {
      border: 1px solid rgba(148,163,184,0.4);
      color: var(--text);
      padding: 6px 10px;
      border-radius: 999px;
      font-size: 13px;
    }
    .resources {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 10px;
    }
    .list {
      display: grid;
      gap: 10px;
    }
    .list-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 12px;
      border-radius: 10px;
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.05);
      font-size: 14px;
    }
    .badge {
      padding: 4px 8px;
      border-radius: 999px;
      background: rgba(127,200,194,0.18);
      color: var(--accent);
      font-weight: 600;
      font-size: 12px;
    }
    .chip {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 6px 10px;
      border-radius: 999px;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255,255,255,0.08);
      font-size: 13px;
    }
    .chip .icon {
      width: 22px;
      height: 22px;
      display: grid;
      place-items: center;
      border-radius: 50%;
      background: linear-gradient(135deg, rgba(127,200,194,0.5), rgba(148,176,255,0.45));
      font-size: 13px;
    }
    .resource-card {
      padding: 12px 14px;
      background: rgba(255,255,255,0.03);
      border-radius: 12px;
      border: 1px solid rgba(255,255,255,0.05);
    }
    footer {
      padding: 20px 5vw 36px;
      color: var(--muted);
      font-size: 13px;
    }
    @media (max-width: 720px) {
      header, .section { padding: 22px; }
    }
    /* Night-mode table styling */
    .gridjs-container {
      background: transparent !important;
      color: var(--text);
    }
    .gridjs-table {
      background: rgba(255,255,255,0.02);
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid rgba(255,255,255,0.06);
    }
    .gridjs-th, .gridjs-td {
      background: transparent !important;
      border-color: rgba(255,255,255,0.06);
      color: var(--text) !important;
    }
    .gridjs-tr:nth-child(even) .gridjs-td {
      background: rgba(255,255,255,0.02) !important;
    }
    .gridjs-tr:hover .gridjs-td {
      background: rgba(148,176,255,0.12) !important;
    }
  </style>
</head>
<body>
  <div class="glow" aria-hidden="true"></div>
  <main>
  <header>
    <span class="pill">Graph & Transformer Fraud Detection Papers</span>
    <h1>Interactive summary of the Safe-Graph curated list</h1>
    <p class="lede">
      Visualize trends, venues, open-source availability, and hotspots across graph/transformer-based fraud and anomaly detection research.
      Data is sourced directly from the upstream GitHub repository and can refresh automatically on new commits.
    </p>
    <div class="grid">
      <div class="card">
        <h3>Total papers</h3>
        <div class="value" id="stat-paper-count">‚Äì</div>
      </div>
      <div class="card">
        <h3>Code availability</h3>
        <div class="value" id="stat-code">‚Äì</div>
      </div>
      <div class="card">
        <h3>Top venue</h3>
        <div class="value" id="stat-venue">‚Äì</div>
      </div>
      <div class="card">
        <h3>Dominant topic</h3>
        <div class="value" id="stat-topic">‚Äì</div>
      </div>
    </div>
  </header>

  <section class="section">
    <h2>What stands out</h2>
    <div class="card">
      <ul class="insights" id="insight-list"></ul>
    </div>
  </section>

  <section class="section">
    <h2>Top cited papers</h2>
    <p id="citation-source" style="color: var(--muted); margin-top: 0;"></p>
    <div class="panel">
      <div id="top-cited-list" class="list"></div>
    </div>
  </section>

  <section class="section">
    <h2>Distribution snapshots</h2>
    <p>Use the hover tooltips to read exact counts.</p>
    <div class="grid">
      <div class="panel"><div id="year-chart" style="height:320px;"></div></div>
      <div class="panel"><div id="category-chart" style="height:320px;"></div></div>
      <div class="panel"><div id="topic-chart" style="height:320px;"></div></div>
    </div>
  </section>

  <section class="section">
    <h2>Method & domain signals</h2>
    <p>Lightweight NLP tagging on titles to surface method families and application domains.</p>
    <div class="grid">
      <div class="panel"><div id="method-chart" style="height:320px;"></div></div>
      <div class="panel"><div id="domain-chart" style="height:320px;"></div></div>
    </div>
  </section>

  <section class="section">
    <h2>Venues and strata</h2>
    <p>Top venues plus a breakdown across arXiv, workshops, top-tier conferences/journals, and others.</p>
    <div class="grid">
      <div class="panel"><div id="venue-chart" style="height:360px;"></div></div>
      <div class="panel"><div id="venue-strata-chart" style="height:360px;"></div></div>
      <div class="panel">
        <h3 style="margin:0 0 8px;">Top venues</h3>
        <div id="venue-list" class="list"></div>
      </div>
    </div>
  </section>

  <section class="section">
    <h2>Code availability & repos</h2>
    <p>Where code is linked, language share and top-starred repositories.</p>
    <div class="grid">
      <div class="panel"><div id="code-presence-chart" style="height:280px;"></div></div>
      <div class="panel"><div id="language-chart" style="height:280px;"></div></div>
      <div class="panel">
        <h3 style="margin:0 0 6px;">Top GitHub repos</h3>
        <div id="top-repo-list" class="list"></div>
      </div>
    </div>
  </section>

  <section class="section">
    <h2>Dataset mentions</h2>
    <p>Datasets detected from paper titles (heuristic keyword matching).</p>
    <div class="grid">
      <div class="panel"><div id="dataset-chart" style="height:300px;"></div></div>
      <div class="panel">
        <h3 style="margin:0 0 8px;">Most cited datasets</h3>
        <div id="dataset-list" class="list"></div>
      </div>
    </div>
  </section>

  <section class="section">
    <h2>Interactive paper table</h2>
    <p>Search titles, filter by venue or category, and click links to open the paper or code.</p>
    <div class="panel">
      <div id="table"></div>
    </div>
  </section>

  <section class="section">
    <h2>Resources, toolboxes, surveys</h2>
    <p>Curated extras from the upstream README.</p>
    <div id="resource-container" class="resources"></div>
  </section>

  <footer>
    Built with Plotly and Grid.js. Regenerate via GitHub Actions on push/dispatch/schedule.
  </footer>

  <script>
    const papers = {{ papers_json | safe }};
    const stats = {{ stats_json | safe }};
    const resources = {{ resources_json | safe }};

    const fmtNumber = (n) => n?.toLocaleString("en-US");
    const langIcons = {
      "Python": "üêç",
      "Jupyter Notebook": "üìì",
      "JavaScript": "üü®",
      "TypeScript": "üí†",
      "C++": "üßä",
      "C": "‚öôÔ∏è",
      "Go": "üêπ",
      "Rust": "ü¶Ä",
      "Julia": "üîÆ",
      "R": "üìä",
      "Java": "‚òï",
    };
    const venueIcons = {
      "KDD": "üî∑",
      "NeurIPS": "üß†",
      "ICLR": "üåÑ",
      "ICML": "üìà",
      "AAAI": "ü§ñ",
      "IJCAI": "üåê",
      "WWW": "üï∏Ô∏è",
      "TheWebConf": "üï∏Ô∏è",
      "CIKM": "üìö",
      "WSDM": "üîç",
      "SDM": "üß≠",
      "SIGIR": "üîé",
      "ACL": "üí¨",
      "EMNLP": "üó£Ô∏è",
      "TKDE": "üìò",
      "TNNLS": "üß†",
      "TIFS": "üõ°Ô∏è",
    };

    const makeChip = (label, icon) => `<span class="chip"><span class="icon">${icon || "‚òÖ"}</span>${label}</span>`;

    function populateStats() {
      document.getElementById("stat-paper-count").textContent = fmtNumber(stats.paper_count || papers.length);
      document.getElementById("stat-code").textContent = stats.code_availability
        ? `${fmtNumber(stats.code_availability.with_code || 0)} (${stats.code_availability.percentage || 0}%)`
        : "‚Äì";
      document.getElementById("stat-venue").textContent = stats.venue_counts?.length ? stats.venue_counts[0].venue : "‚Äì";
      document.getElementById("stat-topic").textContent = stats.topics?.length ? stats.topics[0].topic : "‚Äì";

      const insightList = document.getElementById("insight-list");
      if (stats.insights?.length) {
        stats.insights.forEach((line) => {
          const li = document.createElement("li");
          li.textContent = line;
          insightList.appendChild(li);
        });
      } else {
        insightList.innerHTML = "<li>No insights available.</li>";
      }
    }

    function chart(container, data, layoutExtras = {}) {
      const baseLayout = {
        margin: {l: 50, r: 20, t: 30, b: 50},
        paper_bgcolor: 'rgba(0,0,0,0)',
        plot_bgcolor: 'rgba(0,0,0,0)',
        font: {color: '#e6edf3', family: 'Manrope'},
      };
      Plotly.newPlot(container, data, {...baseLayout, ...layoutExtras}, {displayModeBar: false, responsive: true});
    }

    function buildOverviewCharts() {
      const years = stats.year_counts || [];
      chart("year-chart", [{
        x: years.map(d => d.year),
        y: years.map(d => d.count),
        type: "bar",
        marker: {color: "#94b0ff"}
      }], {title: "Papers by Year"});

      chart("category-chart", [{
        x: stats.category_counts?.map(d => d.count),
        y: stats.category_counts?.map(d => d.category),
        type: "bar",
        orientation: "h",
        marker: {color: "#7fc8c2"}
      }], {title: "Entries by Category", height: 320, margin: {l: 120, r: 20, t: 30, b: 40}});

      chart("topic-chart", [{
        x: stats.topics?.map(d => d.topic),
        y: stats.topics?.map(d => d.count),
        type: "bar",
        marker: {color: "#f2b6a0"}
      }], {title: "Frequent Title Terms", height: 320});
    }

    function buildMethodDomainCharts() {
      if (stats.method_counts?.length) {
        chart("method-chart", [{
          x: stats.method_counts.map(d => d.count),
          y: stats.method_counts.map(d => d.method),
          type: "bar",
          orientation: "h",
          marker: {color: "#c6b2ff"}
        }], {title: "Method families (title tags)", height: 320, margin: {l: 170, r: 20, t: 30, b: 40}});
      } else {
        document.getElementById("method-chart").innerHTML = "<p style='color:var(--muted)'>No method tags detected.</p>";
      }

      if (stats.domain_counts?.length) {
        chart("domain-chart", [{
          x: stats.domain_counts.map(d => d.count),
          y: stats.domain_counts.map(d => d.domain),
          type: "bar",
          orientation: "h",
          marker: {color: "#9dbad5"}
        }], {title: "Domain focus (title tags)", height: 320, margin: {l: 170, r: 20, t: 30, b: 40}});
      } else {
        document.getElementById("domain-chart").innerHTML = "<p style='color:var(--muted)'>No domain tags detected.</p>";
      }
    }

    function buildVenueCharts() {
      if (stats.venue_counts?.length) {
        chart("venue-chart", [{
          x: stats.venue_counts.map(d => d.count),
          y: stats.venue_counts.map(d => d.venue),
          type: "bar",
          orientation: "h",
          marker: {color: "#94b0ff"}
        }], {title: "Top Venues", height: 360, margin: {l: 160, r: 20, t: 30, b: 40}});
      } else {
        document.getElementById("venue-chart").innerHTML = "<p style='color:var(--muted)'>No venue data.</p>";
      }

      if (stats.venue_strata?.length) {
        chart("venue-strata-chart", [{
          labels: stats.venue_strata.map(d => d.stratum),
          values: stats.venue_strata.map(d => d.count),
          type: "pie",
          hole: 0.35
        }], {title: "Venue strata", height: 360});
      } else {
        document.getElementById("venue-strata-chart").innerHTML = "<p style='color:var(--muted)'>No venue strata data.</p>";
      }

      const venueList = document.getElementById("venue-list");
      const venues = stats.venue_counts || [];
      if (!venues.length) {
        venueList.innerHTML = "<p style='color:var(--muted)'>No venue data.</p>";
      } else {
        venues.slice(0, 10).forEach((entry, idx) => {
          const item = document.createElement("div");
          item.className = "list-item";
          const icon = venueIcons[entry.venue] || "üèõÔ∏è";
          item.innerHTML = `<span>${idx + 1}. ${makeChip(entry.venue, icon)}</span>
                            <span class="badge">${fmtNumber(entry.count)}</span>`;
          venueList.appendChild(item);
        });
      }
    }

    function buildCodeCharts() {
      if (stats.code_availability?.total) {
        chart("code-presence-chart", [{
          labels: ["With code", "No code"],
          values: [stats.code_availability.with_code, stats.code_availability.without_code],
          type: "pie",
          hole: 0.4,
          marker: {colors: ["#7fc8c2", "#2a3442"]}
        }], {title: "Code availability"});
      } else {
        document.getElementById("code-presence-chart").innerHTML = "<p style='color:var(--muted)'>No code availability data.</p>";
      }

      if (stats.language_counts?.length) {
        chart("language-chart", [{
          labels: stats.language_counts.map(d => d.language),
          values: stats.language_counts.map(d => d.bytes),
          type: "pie",
          hole: 0.4
        }], {title: "Language share (code repos)", height: 320});
      } else {
        document.getElementById("language-chart").innerHTML = "<p style='color:var(--muted)'>No code language data yet.</p>";
      }

      const repoContainer = document.getElementById("top-repo-list");
      const repos = stats.top_repos || [];
      if (!repos.length) {
        repoContainer.innerHTML = "<p style='color:var(--muted)'>No GitHub metadata fetched (run without --skip-code-fetch and set GITHUB_TOKEN).</p>";
      } else {
        repos.forEach((repo, idx) => {
          const item = document.createElement("div");
          item.className = "list-item";
          const langIcon = langIcons[repo.language] || "üíª";
          const langChip = repo.language ? makeChip(repo.language, langIcon) : "";
          item.innerHTML = `<span>${idx + 1}. <a href="${repo.url}" target="_blank" rel="noopener">${repo.full_name}</a></span>
                            <span style="display:flex;align-items:center;gap:8px;">${langChip}<span class="badge">‚òÖ ${fmtNumber(repo.stars)}</span></span>`;
          repoContainer.appendChild(item);
        });
      }
    }

    function buildDatasetSection() {
      const ds = stats.dataset_counts || [];
      if (ds.length) {
        chart("dataset-chart", [{
          x: ds.map(d => d.count),
          y: ds.map(d => d.dataset),
          type: "bar",
          orientation: "h",
          marker: {color: "#7fc8c2"}
        }], {title: "Dataset mentions in titles", height: 300, margin: {l: 180, r: 20, t: 30, b: 30}});
      } else {
        document.getElementById("dataset-chart").innerHTML = "<p style='color:var(--muted)'>No dataset mentions detected.</p>";
      }

      const list = document.getElementById("dataset-list");
      if (!ds.length) {
        list.innerHTML = "<p style='color:var(--muted)'>No dataset mentions detected.</p>";
      } else {
        ds.forEach((entry) => {
          const item = document.createElement("div");
          item.className = "list-item";
          item.innerHTML = `<span>${entry.dataset}</span><span class="badge">${fmtNumber(entry.count)}</span>`;
          list.appendChild(item);
        });
      }
    }

    function buildTopCited() {
      const list = document.getElementById("top-cited-list");
      const source = document.getElementById("citation-source");
      if (stats.citation_source) {
        source.textContent = `Source: ${stats.citation_source}`;
      } else {
        source.textContent = "";
      }
      if (stats.top_cited?.length) {
        stats.top_cited.forEach((paper, idx) => {
          const item = document.createElement("div");
          item.className = "list-item";
          const link = paper.paper_url || paper.openalex_url || "#";
          const venue = paper.venue || "Venue N/A";
          const year = paper.year || "‚Äî";
          item.innerHTML = `<span>${idx + 1}. <a href="${link}" target="_blank" rel="noopener">${paper.title}</a>
                            <span style="color: var(--muted); font-size: 12px;">(${year} - ${venue})</span></span>
                            <span class="badge">${fmtNumber(paper.citation_count)}</span>`;
          list.appendChild(item);
        });
      } else {
        const note = stats.citation_note || "Citation data unavailable (OpenAlex lookup failed).";
        list.innerHTML = `<p style="color: var(--muted); margin: 0;">${note}</p>`;
      }
    }

    function buildTable() {
      const rows = papers.map((p) => [
        p.year || "‚Äî",
        gridjs.html(`<a href="${p.paper_url || '#'}" target="_blank" rel="noopener">${p.title}</a>`),
        p.venue || "‚Äî",
        p.category || "‚Äî",
        p.subcategory || "‚Äî",
        gridjs.html(p.code_url ? `<a href="${p.code_url}" target="_blank" rel="noopener">Code</a>` : "‚Äî")
      ]);
      new gridjs.Grid({
        columns: ["Year", "Title", "Venue", "Category", "Section", "Code"],
        data: rows,
        search: true,
        sort: true,
        pagination: {enabled: true, limit: 15},
        style: {
          table: {'background-color': 'transparent'},
          th: {'background-color': '#0f172a', 'color': '#e2e8f0'},
          td: {'color': '#e2e8f0'}
        }
      }).render(document.getElementById("table"));
    }

    function buildResources() {
      if (!resources?.length) {
        document.getElementById("resource-container").innerHTML = "<p style='color:var(--muted)'>No extra resources parsed.</p>";
        return;
      }
      const container = document.getElementById("resource-container");
      resources.forEach((res) => {
        const div = document.createElement("div");
        div.className = "resource-card";
        div.innerHTML = `<div style="color:var(--muted);font-size:12px;text-transform:uppercase;letter-spacing:1px;">${res.category}</div>
                         <a href="${res.url}" target="_blank" rel="noopener">${res.title}</a>`;
        container.appendChild(div);
      });
    }

    populateStats();
    buildTopCited();
    buildOverviewCharts();
    buildMethodDomainCharts();
    buildVenueCharts();
    buildCodeCharts();
    buildDatasetSection();
    buildTable();
    buildResources();
  </script>
  </main>
</body>
</html>
